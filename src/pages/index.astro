---
import Layout from "@/layouts/Layout.astro";
import { Button } from "@/components/ui/button";
import {
  ArrowRight,
  ChartLine,
  Sparkle,
  Lightning,
  Shield,
  Rocket,
} from "@phosphor-icons/react";
import { Picture } from "astro:assets";
import Hero from "@/components/sections/hero.astro";
import Stats from "@/components/sections/stats.astro";
import Footer from "@/components/sections/footer.astro";
import Steps from "@/components/sections/steps.astro";
import Features from "@/components/sections/features.astro";
import FeaturesBento from "@/components/sections/features-bento.astro";
import FeaturesMore from "@/components/sections/features-more.astro";
import FooterCTA from "@/components/sections/footer-cta.astro";

const features = [
  {
    name: "Integrations",
    description: "Connect your account to your favorite platforms",
    icon: ArrowRight,
  },
];

const more_features = [
  {
    name: "Integrations",
    description:
      "Connect your Stweet account to your favorite platforms, like Shopify, WooCommerce, and Slack.",
    icon: ArrowRight,
  },
  {
    name: "Analytics",
    description:
      "Get real-time analytics on your Stweet account, including sentiment, engagement, and more.",
    icon: ChartLine,
  },
];

const stats = [
  {
    label: "Transactions every 24 hours",
    value: "44 million",
  },
  {
    label: "Transactions every 24 hours",
    value: "44 million",
  },
  {
    label: "Transactions every 24 hours",
    value: "44 million",
  },
];

const testimonials = [
  {
    name: "John Doe",
    quote: "Great product!",
    avatar: "/path/to/avatar.jpg",
  },
];

const steps = [
  {
    name: "Sign Up",
    description: "Create your account in seconds",
    icon: Sparkle,
  },
  {
    name: "Configure",
    description: "Set up your preferences and integrations",
    icon: Lightning,
  },
  {
    name: "Deploy",
    description: "Launch your application with confidence",
    icon: Rocket,
  },
];
---

<Layout title='Modern SaaS Platform' description='dfsdfdsf'>
  <main class='min-h-screen'>
    <!-- Hero Section -->
    <Hero
      title='Social proofs made easy'
      description='The easiest way to gather social proof'
      testimonials={testimonials}
    />

    <!-- Stats Section -->
    <Stats stats={stats} />

    <!-- Steps Section -->
    <Steps steps={steps} />

    <!-- Features Section -->
    <Features title='Our Features' features={features} />

    <!-- Bento Features Section -->
    <FeaturesBento />

    <!-- More Features Section -->
    <FeaturesMore
      title='Advanced Features'
      subtitle='Powerful tools for your workflow'
      description='Discover our advanced features that help you build better applications.'
      features={more_features}
    />

    <!-- CTA Section -->
    <FooterCTA
      title='Start your journey today'
      description='Join our community of innovators and build something amazing'
      buttonText='Get Started'
      buttonIcon={ArrowRight}
    />

    <!-- Footer -->
    <Footer />
  </main>
</Layout>
