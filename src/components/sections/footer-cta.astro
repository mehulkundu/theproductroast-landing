---
import { Button } from "@/components/ui/button";
import { Rocket } from "@phosphor-icons/react";
import DoubleBorderCard from "@/components/double-border-card.astro";

interface Props {
  title?: string;
  description?: string;
  buttonText?: string;
  buttonIcon?: any;
  className?: string;
}

const {
  title = "Ready to get started?",
  description = "Join thousands of developers who are already building the future with our platform.",
  buttonText = "Launch your project",
  buttonIcon = Rocket,
  className,
} = Astro.props;

const Icon = buttonIcon;
---

<section class={`py-16 ${className}`}>
  <div class='mx-auto max-w-7xl px-4 sm:px-8'>
    <DoubleBorderCard extraClass='text-center'>
      <h2 class='font-bold font-serif tracking-tight'>
        {title}
      </h2>
      <p class='mt-6 leading-8 text-muted-foreground'>
        {description}
      </p>
      <div class='mt-10 flex items-center justify-center gap-x-6'>
        <Button size='lg' className='group'>
          {buttonText}
          <Icon
            className='ml-2 h-4 w-4 group-hover:translate-x-1 transition-transform'
          />
        </Button>
      </div>
    </DoubleBorderCard>
  </div>
</section>
