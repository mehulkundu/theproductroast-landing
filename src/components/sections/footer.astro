---
import { Picture } from "astro:assets";

const footerLinks = [
  {
    name: "Products",
    links: [
      { name: "Testimonial Software", href: "/products/testimonial-software" },
      { name: "Features", href: "/products/features" },
      { name: "Solutions", href: "/products/solutions" },
      { name: "Target Segments", href: "/products/segments" },
    ],
  },
  {
    name: "Resources",
    links: [
      { name: "Blog", href: "/resources/blog" },
      { name: "Guides", href: "/resources/blog/guides" },
      { name: "Case Studies", href: "/resources/blog/case-studies" },
      { name: "Templates", href: "/resources/templates" },
    ],
  },
  {
    name: "Company",
    links: [
      { name: "About", href: "/about" },
      { name: "Pricing", href: "/pricing" },
      { name: "Compare", href: "/compare" },
      { name: "Contact", href: "/contact" },
    ],
  },
  {
    name: "Legal",
    links: [
      { name: "Privacy Policy", href: "/legal/privacy-policy" },
      { name: "Terms of Service", href: "/legal/terms-of-service" },
      { name: "Cookie Policy", href: "/legal/cookie-policy" },
      { name: "GDPR", href: "/legal/gdpr" },
    ],
  },
];
---

<footer class='container mx-auto px-8'>
  <div class='max-w-[1200px] mx-auto'>
    <div
      class='px-5 py-24 mx-auto flex md:items-center lg:items-start md:flex-row md:flex-nowrap flex-wrap flex-col'>
      <div class='w-64 flex-shrink-0 md:mx-0 mx-auto text-center md:text-left'>
        <div class='mr-4 flex'>
          <a href='/' class='mr-6 flex items-center space-x-2'>
            <Picture
              formats={["avif", "webp"]}
              fallbackFormat='png'
              width='32'
              height='32'
              src='/logo.svg'
              alt='Nephophile Studio Logo'
            />
            <span class='font-bold text-2xl font-serif'>stweet</span>
          </a>
        </div>
        <p class='mt-2 text-muted-foreground'>
          Air plant banjo lyft occupy retro adaptogen indego
        </p>
      </div>
      <div
        class='flex-grow flex flex-wrap md:pl-20 -mb-10 md:mt-0 mt-10 md:text-left text-center'>
        {
          footerLinks.map((link) => (
            <div class='lg:w-1/4 md:w-1/2 w-full px-4'>
              <p class='font-medium font-serif mb-2'>{link.name}</p>
              <nav class='list-none mb-10'>
                {link.links.map((item) => (
                  <li class='cursor-pointer'>
                    <a class='text-muted-foreground hover:text-primary'>
                      {item.name}
                    </a>
                  </li>
                ))}
              </nav>
            </div>
          ))
        }
      </div>
    </div>
    <div>
      <div
        class='container mx-auto py-4 px-5 flex flex-wrap flex-col sm:flex-row'>
        <p class='text-sm text-center sm:text-left'>
          © 2024 stweet —
          <a
            href='https://twitter.com/knyttneve'
            rel='noopener noreferrer'
            class='ml-1'
            target='_blank'>
            Awesome Side Projects
          </a>
        </p>
        <span
          class='inline-flex sm:ml-auto sm:mt-0 mt-2 justify-center sm:justify-start'>
          <a class=''>
            <svg
              fill='currentColor'
              stroke-linecap='round'
              stroke-linejoin='round'
              stroke-width='2'
              class='w-5 h-5'
              viewBox='0 0 24 24'>
              <path
                d='M18 2h-3a5 5 0 00-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 011-1h3z'
              ></path>
            </svg>
          </a>
          <a class='ml-3'>
            <svg
              fill='currentColor'
              stroke-linecap='round'
              stroke-linejoin='round'
              stroke-width='2'
              class='w-5 h-5'
              viewBox='0 0 24 24'>
              <path
                d='M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z'
              ></path>
            </svg>
          </a>
          <a class='ml-3'>
            <svg
              fill='none'
              stroke='currentColor'
              stroke-linecap='round'
              stroke-linejoin='round'
              stroke-width='2'
              class='w-5 h-5'
              viewBox='0 0 24 24'>
              <rect width='20' height='20' x='2' y='2' rx='5' ry='5'></rect>
              <path d='M16 11.37A4 4 0 1112.63 8 4 4 0 0116 11.37zm1.5-4.87h.01'
              ></path>
            </svg>
          </a>
          <a class='ml-3'>
            <svg
              fill='currentColor'
              stroke='currentColor'
              stroke-linecap='round'
              stroke-linejoin='round'
              stroke-width='0'
              class='w-5 h-5'
              viewBox='0 0 24 24'>
              <path
                stroke='none'
                d='M16 8a6 6 0 016 6v7h-4v-7a2 2 0 00-2-2 2 2 0 00-2 2v7h-4v-7a6 6 0 016-6zM2 9h4v12H2z'
              ></path>
              <circle cx='4' cy='4' r='2' stroke='none'></circle>
            </svg>
          </a>
        </span>
      </div>
    </div>
  </div>
</footer>
